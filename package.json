{
  "name": "@rewdy/md-formatter",
  "version": "0.3.1",
  "description": "A fast, opinionated Markdown formatter written in Rust",
  "main": "index.js",
  "types": "index.d.ts",
  "bin": {
    "mdfmt": "bin/mdfmt.js"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "bin"
  ],
  "napi": {
    "name": "md-formatter",
    "triples": {
      "defaults": true,
      "additional": [
        "x86_64-unknown-linux-musl",
        "aarch64-unknown-linux-gnu",
        "aarch64-unknown-linux-musl",
        "aarch64-apple-darwin",
        "aarch64-pc-windows-msvc"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rewdy/md-formatter"
  },
  "license": "MIT",
  "keywords": [
    "markdown",
    "formatter",
    "lint",
    "napi-rs",
    "rust"
  ],
  "engines": {
    "node": ">= 16"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release --cargo-flags=\"--no-default-features\" --features napi",
    "build:debug": "napi build --platform --cargo-flags=\"--no-default-features\" --features napi",
    "bump": "node scripts/bump-version.mjs",
    "clean": "cargo clean && rm -rf *.node",
    "prepublishOnly": "napi prepublish -t npm",
    "preflight": "pnpm clean && pnpm build && pnpm test",
    "test": "node test.js",
    "version": "napi version"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0"
  },
  "packageManager": "pnpm@10.15.0"
}
